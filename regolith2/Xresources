regolith.wallpaper.file: ~/dotfiles/images/imageedit_4_7587109146.jpg
regolith.wallpaper.options: zoom
regolith.lockscreen.wallpaper.file: ~/dotfiles/images/imageedit_4_7587109146.jpg
regolith.lockscreen.wallpaper.options: zoom

i3-wm.gaps.inner.size: 25
i3-wm.program.unclutter: :
i3-wm.bar.position: top
i3-wm.bar.trayoutput: none

## do not update default terminal theme during regolith-look regresh
gnome.terminal.update: false

## Open floating window for file explorer
i3-wm.program.files: /usr/bin/nautilus --new-window --class=floating_window

## Remap dec_gaps otherwise it is colliding with moving a window to the 6th workspace 
i3-wm.binding.dec_gaps: minus
i3-wm.binding.dec_gaps_big: Shift+minus

## Remap vertical and horizontal window orientation
i3-wm.binding.split_v: semicolon
i3-wm.binding.split_h: apostrophe
